@page "/Hostel/{Id:int}"
@inherits HostelDetailsBase

@if (Hostel == null && ErrorMessage == null)
{
    <h3 class="mt-5">Wczytywanie hostelu...</h3>
    <DisplayLoading></DisplayLoading>
}
else if (ErrorMessage != null)
{
   <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mt-5">Informacje na temat: @Hostel.Name</h3>
    <hr/>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Hostel.ImageUrl"/>
        </div>
        <div class="col-md-6">
            <h3>Dane Kontaktowe</h3>
            <p class="mt-4">
                <b>Email:</b> @Hostel.ContactEmail
            </p>
            <p class="">
                <b>Telefon:</b> @Hostel.ContactNumber
            </p>
            <p class="">
                <b>Adres:</b> @Hostel.PostalCode @Hostel.City, @Hostel.Street
            </p>
        </div>
        <h3 class="mt-3">Opis</h3>
        <hr/>
        <div class="col-md-6 mb-5">
            <p class="mb-4">
                @Hostel.Description
            </p>
        </div>
        <h3 class="mt-3">Pokoje</h3>
        <hr/>
        <div class="col-md-6">
            <p class="mb-4">
                <h3>Lista pokojów jest pusta</h3>
            </p>
        </div>
    </div>
}